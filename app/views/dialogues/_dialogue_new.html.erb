<ul class="nav nav-pills flex-column mb-auto">
  <% @users.each do |user| %>

    <% if user.id != current_user.id %>
      <li class="nav-item d-flex justify-content-between align-items-center user_list_item">
        <div class="text-secondary">
          <span class="fw-semibold"><%= user.name%></span><br>
          <span class="fs-6 fw-lighter"> <%= user.nickname %></span>
        </div>

        <%= form_with url: dialogues_path do |form| %>
          <%= form.hidden_field(:recipient_id, :value => user.id) %>
          <%= form.submit "Start dialogue", class:"btn btn-primary "%>
        <% end %>
      </li>
      <hr class="p-0 my-1">
    <% end %>
  <% end %>
</ul>