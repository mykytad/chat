<div class="col-12 row d-flex justify-content-between vh-100">
  <%= render "dialogues/sidebar" %>

  <div class="dialogues-display col-12 col-md-9 flex-column justify-content-around">
    
    <nav class="d-flex navbar navbar-expand-lg fixed py-0 messages_recipient mb-2">
      <div class="container-fluid"> 
        <span id="back-arrow" class="d-inline d-lg-none text-dark-emphasis">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8"/>
          </svg>
        </span>
        <span class="navbar-brand p-0 d-flex align-items-center text-dark-emphasis">
          Chat with
        </span>
      </div>
    </nav>
    

    <div class="overflow-scroll d-flex flex-column users_list_wrap">
      <small class="px-1 mb-1"> All users </small>
      <%= form_with method: :get do |form|%>
        <div class="mb-3 d-flex justify-content-between align-items-center">
          <%= form.text_field :search, placeholder:"search user", class:"form-control me-2" %>
          <%= form.submit "Search", class:"btn btn-primary" %>
        </div> 
      <% end %>
      <%= render "dialogues/dialogue_new"%>
    </div>
  </div>
</div>