<li id="dialogue_<%= dialogue.id %>" class="user_list_item p-2 border-bottom"
    data-dialogue-id="<%= dialogue.id %>">

  <%= link_to dialogue_messages_path(dialogue), class: "user_list_link d-flex justify-content-between" do %>
    <div class="pt-1">
      <p class="fw-bold mb-0">
        <%= @current_user_id == dialogue.sender_id ? dialogue.recipient.name : dialogue.sender.name %>
        <% if dialogue.pin_dialogue %>
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pin-fill" viewBox="0 0 16 16">
            <path d="M4.146.146A.5.5 0 0 1 4.5 0h7a.5.5 0 0 1 .5.5c0 .68-.342 1.174-.646 1.479-.126.125-.25.224-.354.298v4.431l.078.048c.203.127.476.314.751.555C12.36 7.775 13 8.527 13 9.5a.5.5 0 0 1-.5.5h-4v4.5c0 .276-.224 1.5-.5 1.5s-.5-1.224-.5-1.5V10h-4a.5.5 0 0 1-.5-.5c0-.973.64-1.725 1.17-2.189A6 6 0 0 1 5 6.708V2.277a3 3 0 0 1-.354-.298C4.342 1.674 4 1.179 4 .5a.5.5 0 0 1 .146-.354"/>
          </svg>
        <% end %>
      </p>
      <p class="last-message small text-muted fw-light" >
        <%= dialogue.last_message if dialogue.last_message %>
      </p>
    </div>

    <div class="pt-1">
      <p class="last-message-time small text-muted mb-1">
        <%= dialogue.updated_at.strftime("%H:%M") if dialogue.last_message %>
      </p>
      <% unless dialogue.unread_messages_count_for(@current_user_id) == 0 %>
        <span class="badge bg-danger rounded-pill float-end">
          <%= dialogue.unread_messages_count_for(@current_user_id) %>
        </span>
      <% end %>
    </div>
  <% end %>
