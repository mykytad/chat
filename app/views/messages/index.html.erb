<div class="col-12 d-flex justify-content-between">
  <%= render "dialogues/sidebar" %>

  <div class="d-flex row col-9" style="height: 700px">
    <nav class="navbar navbar-expand-lg fixed bg-body-tertiary messages_recipient ">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">
          <% if current_user.id == @dialogue.sender_id %>
            <p> <%= @dialogue.recipient.name %> </p>
          <% else %>
            <p> <%= @dialogue.sender.name %> </p>
          <% end %>
        </a>
      </div>
    </nav>

    <div class="messages_text h-75 overflow-scroll">
      <% @messages.each do |message| %>
        <p> <%= message.user.name %>: </p>

        <% if current_user.id == message.user_id %>
          <p class="btn btn-success rounded-pill px-3"> <%= message.body %> </p>
        <% else %>
          <p class="btn btn-secondary rounded-pill px-3"> <%= message.body %> </p>
        <% end %>

        
      <% end %>
    </div>
    <%= render "messages/new" %>
  </div>
</div>
