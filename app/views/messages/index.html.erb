<div class="col-12 d-flex justify-content-between" style="height: 700px">
  <%= render "dialogues/sidebar" %>

  <div class="d-flex row col-9" >
    <nav class="navbar navbar-expand-lg fixed bg-body-tertiary messages_recipient ">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">
          <% if current_user.id == @dialogue.sender_id %>
            <p> <%= @dialogue.recipient.name %> </p>
          <% else %>
            <p> <%= @dialogue.sender.name %> </p>
          <% end %>
        </a>
      </div>
    </nav>

    <div class="messages_text h-75 overflow-scroll">
      <% @messages.each do |message| %>

        <p> <%= message.user.name %>: </p>
        <div class="message_body_wrap bg-success rounded text-bg-success">
          <div class="content-inner"> 
            <% if current_user.id == message.user_id %>
            <div class="message_content">
              <%= message.body %>
            </div>
            <% else %>
              <p class="bg-secondary rounded-pill px-4 text-bg-success">
                <%= message.body %>
              </p>
            <% end %>
          </div>
        </div>

      <% end %>
    </div>
    <%= render "messages/new" %>
  </div>
</div>
