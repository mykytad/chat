<!DOCTYPE html>
<html>
  <head>
    <title>MyChat</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <!--<meta name="turbo-visit-control" content="reload">-->
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <!--<script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.1/dist/Chart.min.js"></script>
    <script src="https://unpkg.com/vue@3/dist/vue.global.js"></script>-->
    <%= javascript_importmap_tags %>
    <style>
    <%= ".msg-text-#{current_user&.id}" %>{
        align-self: end !important;
        background: #198754 !important;
        color: #fff;
      }
      <%= ".read-#{current_user&.id}" %>{
        display: inline-block !important;
        align-self: end !important;
      }
    </style>
  </head>

  <body>
    <div class="container vh-100">
      <% if flash[:alert] %>
        <div class="alert alert-danger fade show" role="alert">
          <%= flash[:alert] %>
        </div>
      <% end %>

      <% if flash[:notice] %>
        <div class="alert alert-success fade show" role="alert">
          <%= flash[:notice] %>
        </div>
      <% end %>
      
      <%= yield %>

      <script src="https://code.jquery.com/jquery-3.7.1.slim.js" integrity="sha256-UgvvN8vBkgO0luPSUl2s8TIlOSYRoGFAX4jlCIm9Adc=" crossorigin="anonymous"></script>
    </div>
    <!-- Image Preview Modal -->
    <div class="modal fade" id="imagePreviewModal" tabindex="-1" aria-labelledby="imagePreviewLabel" aria-hidden="true" data-turbo-permanent>
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="imagePreviewLabel">Image Preview</h5>
            <button type="button" class="btn-close" id="closeModal" aria-label="Close"></button>
          </div>
          <div class="modal-body d-flex flex-wrap" id="imagePreviewContainer">
            <!-- Images will be added here dynamically -->
          </div>
          <div class="modal-footer">
            <input type="file" id="addMoreImages" multiple class="d-none">
            <label for="addMoreImages" class="btn btn-outline-success">+ Add Image</label>
            <button type="button" class="btn btn-secondary" id="cancelUpload">Cancel</button>
            <button type="button" class="btn btn-success" id="confirmUpload">Send</button>
          </div>
        </div>
      </div>
    </div>
    <script>
      document.addEventListener("turbo:load", () => {
        const container = document.querySelector(".container");
        const inputField = document.querySelector(".message_area");

        if (!container || !inputField || !window.visualViewport) return;

        function isMobileDevice() {
            return /Mobi|Android|iPhone|iPad|iPod/i.test(navigator.userAgent);
        }

        function adjustForKeyboard() {
            if (!isMobileDevice()) return;

            const viewportHeight = window.visualViewport.height;

            if (document.activeElement === inputField) {
                // Клавиатура открыта → уменьшаем высоту контейнера
                container.style.height = `${viewportHeight}px`;
            } else {
                // Клавиатура закрыта → возвращаем 100vh
                container.style.height = "100vh";
            }
        }

        window.visualViewport.addEventListener("resize", adjustForKeyboard);
        inputField.addEventListener("focus", adjustForKeyboard);
        inputField.addEventListener("blur", adjustForKeyboard);

        document.addEventListener("turbo:before-cache", () => {
            window.visualViewport.removeEventListener("resize", adjustForKeyboard);
            inputField.removeEventListener("focus", adjustForKeyboard);
            inputField.removeEventListener("blur", adjustForKeyboard);
        });
    });

    </script>
  </body>
</html>
