<!DOCTYPE html>
<html>
  <head>
    <title>MyChat</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <!--<script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.1/dist/Chart.min.js"></script>
    <script src="https://unpkg.com/vue@3/dist/vue.global.js"></script>-->
    <%= javascript_importmap_tags %>
    <style>
      <%= ".msg-text-#{current_user&.id}" %>{
        align-self: end !important;
        background: #198754 !important;
        color: #fff;
      }
      <%= ".msg-text-#{current_user&.id}:hover" %> .msg_btn_edit{
        display: inline-block !important;
      }
      <%= ".read-#{current_user&.id}" %>{
        display: inline-block !important;
        align-self: end !important;
      }
    </style>
  </head>

  <body>
    <div class="container body_height">
      <% if notice %>
        <p class="notice"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="alert"><%= alert %></p>
      <% end %>
      
      <%= yield %>

      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
      <script src="https://code.jquery.com/jquery-3.7.1.slim.js" integrity="sha256-UgvvN8vBkgO0luPSUl2s8TIlOSYRoGFAX4jlCIm9Adc=" crossorigin="anonymous"></script>
    </div>

    
    <script>
      function updateRecipientNames() {
        // Получаем текущего пользователя
        const currentElement = document.getElementById('current-user');
        const currentUserId = currentElement.getAttribute('data-current-user-id');
        console.log("Current ID:", currentUserId);

        // Получаем все элементы диалогов
        const dialogueElements = document.querySelectorAll('#dialogue');

        dialogueElements.forEach(dialogueElement => {
          const senderId = dialogueElement.getAttribute('data-sender-id');
          const senderName = dialogueElement.getAttribute("data-sender-name");
          const recipientId = dialogueElement.getAttribute("data-recipient-id");
          const recipientName = dialogueElement.getAttribute("data-recipient-name");

          console.log("Sender ID:", senderId);
          console.log("Sender name:", senderName);
          console.log("Recipient ID:", recipientId);
          console.log("Recipient name:", recipientName);

          let dialogueRecipientName;

          // Определяем, кто является получателем
          if (senderId === currentUserId) {
            dialogueRecipientName = recipientName; // Если текущий пользователь - отправитель, то получатель - это recipientName
          } else {
            dialogueRecipientName = senderName; // Иначе - senderName
          }

          console.log("Dialogue recipient name:", dialogueRecipientName);
          dialogueElement.querySelector('.dialogue-recipient-name').textContent = dialogueRecipientName; // Устанавливаем имя получателя
        });
      }

      // Запуск при загрузке страницы
      document.addEventListener('DOMContentLoaded', function() {
        updateRecipientNames(); // Запускаем обработку всех диалогов при первой загрузке
      });

      // Запуск при обновлении контента через Turbo (например, переключение диалогов)
      document.addEventListener('turbo:load', function() {
        updateRecipientNames(); // Запускаем обработку всех диалогов при обновлении через Turbo
      });
    </script>
  </body>
</html>
