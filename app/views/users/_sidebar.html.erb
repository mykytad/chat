<div class="sidebar d-none col-12 col-md-12 d-lg-flex flex-column overflow-scroll mb-4 bg-body-tertiary p-0 h-100">
  <div class="sticky-top mb-2 sidebar_menu_header d-flex align-items-center justify-content-between">
    <a href="<%= root_path %>" class="d-flex  px-3 align-items-center mb-md-0 me-md-auto link-body-emphasis text-decoration-none nav-link link-secondary">
      <span class="fs-4">MyChat</span>
    </a>

    <span id="sidebar-cross" class="d-inline d-lg-none text-dark-emphasis">
      <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-x" viewBox="0 0 16 16">
        <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708"/>
      </svg>
    </span>
  </div>

  <ul class="nav nav-pills flex-column mb-auto">
    <li class="ms-2">
      <img src="/images/<%= avatar %>.png" alt="<%= @user.name %>" class="rounded-circle">
      <span class="fw-semibold">
        <%= @user.name %> 
      </span>
      <span class="fs-6 fw-lighter">
        <%= @user.nickname %>
      </span>
    </li>

    <li class="ms-2 mt-2">
      <span class="fw-medium">
        Email:
      </span><br>
      <span class="fw-light">
        <%= @user.email %>
      </span>
    </li>

    <li class="ms-2 mt-2">
      <span class="fw-medium">
        Phone:
      </span><br>
      <span class="fw-light">
        <%= @user.phone %>
      </span>
    </li>

    <li class="nav-item user_list_item border-top border-danger-subtle mt-3">
      <%= link_to "Sign out", destroy_user_session_path, data: { turbo_method: :delete }, class:"nav-link text-danger" %>
    </li>
  </ul>

  <div class="sidebar_menu_header sticky-bottom d-flex flex-row justify-content-around col-12">
    <div class="sidebar_icon_wrap chat col-2 p-2">
      <%= link_to dialogues_path, class:"sidebar_icon_link" do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="sidebar_icon bi bi-chat" viewBox="0 0 16 16">
          <path d="M2.678 11.894a1 1 0 0 1 .287.801 11 11 0 0 1-.398 2c1.395-.323 2.247-.697 2.634-.893a1 1 0 0 1 .71-.074A8 8 0 0 0 8 14c3.996 0 7-2.807 7-6s-3.004-6-7-6-7 2.808-7 6c0 1.468.617 2.83 1.678 3.894m-.493 3.905a22 22 0 0 1-.713.129c-.2.032-.352-.176-.273-.362a10 10 0 0 0 .244-.637l.003-.01c.248-.72.45-1.548.524-2.319C.743 11.37 0 9.76 0 8c0-3.866 3.582-7 8-7s8 3.134 8 7-3.582 7-8 7a9 9 0 0 1-2.347-.306c-.52.263-1.639.742-3.468 1.105"/>
        </svg>
      <% end %>
    </div>

    <div class="sidebar_icon_wrap gear col-2 p-2">
      <%= link_to edit_user_registration_path, class:"sidebar_icon_link" do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="sidebar_icon bi bi-gear" viewBox="0 0 16 16">
          <path d="M8 4.754a3.246 3.246 0 1 0 0 6.492 3.246 3.246 0 0 0 0-6.492M5.754 8a2.246 2.246 0 1 1 4.492 0 2.246 2.246 0 0 1-4.492 0"/>
