<main class="form-signin m-auto d-flex justify-content-center col-12"> <!--  w-100  -->
  <div class="col-4">
    <div class="d-flex justify-content-center">
      <h2 class="align-self-center">Log in</h2>
    </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="row mb-3">
        <div class="field col-sm-8 w-100">
          <%= f.label :email, class:"col-sm-2 col-form-label" %><br />
          <%= f.email_field :email, autocomplete: "email", class:"form-control" %>
        </div>
      </div>

      <div class="row mb-3">
        <div class="field">
          <%= f.label :password, class:"col-sm-2 col-form-label" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
        </div>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class:"btn btn-primary w-100 mb-2 mt-2" %>
      </div>
    <% end %>

    <div>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</main>